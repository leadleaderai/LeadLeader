# Server Configuration
PORT=8080
PUBLIC_BASE_URL=  # e.g., https://yourapp.fly.dev (required for audio playback)

# Tenant Configuration
TENANT_ID=demo
TENANT_TIMEZONE=America/Los_Angeles

# Email Configuration
RECIPIENTS=  # comma-separated email addresses for notifications

# Google Integration
SHEETS_SPREADSHEET_ID=  # Google Sheets ID for call logging
GOOGLE_SERVICE_ACCOUNT_JSON=  # Base64-encoded service account JSON or raw JSON string

# SendGrid Configuration
SENDGRID_API_KEY=  # SendGrid API key (starts with SG.)
SENDGRID_FROM=  # From email address

# Twilio Configuration
TWILIO_ACCOUNT_SID=  # Twilio Account SID (starts with AC)
TWILIO_AUTH_TOKEN=  # Twilio Auth Token
TWILIO_NUMBER=  # Twilio phone number (E.164 format: +1XXXXXXXXXX)

# Security
CRON_SECRET=  # Secret token for /cron/daily endpoint

# Feature Flags
ENABLE_AI_REDIRECT=false
ENABLE_TRANSCRIBE=false
VALIDATE_TWILIO_SIGNATURE=false
