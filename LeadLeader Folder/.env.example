# Server Configuration
PORT=8080
NODE_ENV=production
PUBLIC_BASE_URL=  # e.g., https://leadleader-ty-demo.fly.dev (required for audio playback)

# Tenant Configuration
TENANT_ID=demo
TENANT_TIMEZONE=America/Los_Angeles

# Email Configuration
RECIPIENTS=  # comma-separated email addresses for notifications

# Google Sheets
SHEETS_SPREADSHEET_ID=  # Google Sheets ID for call logging
GOOGLE_SERVICE_ACCOUNT_JSON=  # Base64-encoded service account JSON or raw JSON string

# SendGrid
SENDGRID_API_KEY=  # SendGrid API key (starts with SG.)
SENDGRID_FROM=  # From email address

# AWS (Polly TTS)
AWS_ACCESS_KEY_ID=  # AWS Access Key ID
AWS_SECRET_ACCESS_KEY=  # AWS Secret Access Key
AWS_REGION=us-east-1

# Security
CRON_SECRET=  # Secret token for /cron/daily endpoint
OWNER_PASSWORD=  # Password for owner panel access
SESSION_SECRET=  # Secret for session encryption
BUSINESS_PHONE=  # Business phone number for display (e.g., +1234567890)

# Feature Flags
ENABLE_TRANSCRIBE=true
ENABLE_POLLY=true
ENABLE_SYSTEM_DASHBOARD=true
ENABLE_TEXT_CHAT=true

# Anti-Abuse Rate Limits (defaults shown)
CONTACT_RATE_PER_MIN=12
CONTACT_BURST=6
CHAT_RATE_PER_MIN=30
CHAT_BURST=10
IP_GLOBAL_RATE_PER_MIN=120
IP_GLOBAL_BURST=60
ABUSE_COOLDOWN_SEC=30

# Optional hCaptcha (leave empty to disable)
HCAPTCHA_SITEKEY=
HCAPTCHA_SECRET=

# Optional IP filtering (comma-separated)
IP_DENYLIST=
IP_ALLOWLIST=

# Build Metadata (auto-populated in CI)
BUILD_TIME=
COMMIT_SHA=
