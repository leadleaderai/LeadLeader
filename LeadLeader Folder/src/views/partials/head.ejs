<!doctype html><html><head>
<meta charset="utf-8"/>
<title><%= title||'LeadLeader' %></title>
<meta name="viewport" content="width=device-width,initial-scale=1"/>
<meta name="description" content="<%= typeof description !== 'undefined' && description ? description : 'LeadLeader - AI-powered voice and chat solutions for your business' %>"/>
<link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='0.9em' font-size='90'>ðŸ“ž</text></svg>"/>
<meta property="og:title" content="<%= title||'LeadLeader' %>"/>
<meta property="og:description" content="<%= typeof description !== 'undefined' && description ? description : 'AI-powered voice and chat solutions' %>"/>
<meta property="og:type" content="website"/>
<link rel="stylesheet" href="/css/custom.css">
</head><body>
<header style="display:flex;gap:14px;align-items:center;justify-content:space-between;padding:12px 16px;border-bottom:1px solid var(--border-color)">
  <nav style="display:flex;gap:12px;align-items:center">
    <a href="/">Home</a><a href="/try">Try</a><a href="/system">System</a>
    <% if (typeof user !== 'undefined' && user && user.role === 'owner') { %>
      <a href="/owner/users">Users</a><a href="/owner/logs">Logs</a>
    <% } %>
  </nav>
  <div style="display:flex;gap:12px;align-items:center">
    <% if (typeof user !== 'undefined' && user) { %>
      <span style="margin-right:8px;color:var(--text-secondary)">
        @<%= user.username %>
        <% if (typeof userPlan !== 'undefined' && userPlan && userPlan !== 'free') { %>
          <span style="display:inline-block;padding:2px 6px;margin-left:4px;background:var(--link-color);color:white;border-radius:4px;font-size:10px;font-weight:600;text-transform:uppercase" aria-label="<%= userPlan %> plan"><%= userPlan %></span>
        <% } %>
      </span>
      <a href="/dashboard">Dashboard</a>
      <a href="/inbox" style="position:relative" <% if (typeof unreadCount !== 'undefined' && unreadCount > 0) { %>aria-label="Inbox, <%= unreadCount %> unread"<% } else { %>aria-label="Inbox"<% } %>>
        Inbox
        <% if (typeof unreadCount !== 'undefined' && unreadCount > 0) { %>
          <span style="position:absolute;top:-8px;right:-8px;display:inline-block;min-width:18px;height:18px;padding:2px 4px;background:#ef4444;color:white;border-radius:9px;font-size:11px;font-weight:600;line-height:14px;text-align:center" aria-hidden="true"><%= unreadCount %></span>
        <% } %>
      </a>
      <a href="/settings/notifications" aria-label="Notification settings">Settings</a>
      <form method="post" action="/auth/logout" style="display:inline;margin:0">
        <button type="submit" style="background:none;border:none;color:var(--link-color);cursor:pointer;text-decoration:underline" aria-label="Log out">Logout</button>
      </form>
    <% } else { %>
      <a href="/auth/login">Log in</a><a href="/auth/signup">Sign up</a>
    <% } %>
    <button id="theme-toggle" aria-label="Toggle dark mode" style="background:none;border:none;cursor:pointer;color:inherit;padding:4px 8px"><span id="theme-icon" aria-hidden="true"></span></button>
  </div>
</header>
<main class="container" style="padding:16px">
